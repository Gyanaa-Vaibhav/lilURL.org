---
const { title = "lilUrl" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style>
	:root{
		--Secondary-Color : #27548A;
		--Primary-Color : #F3F3E0;
		--Body-Color : #183B4E;
		--Accent-Color : #c08322;
		--Accent-Color-2 : #DDA853;
	}

	a {
		text-decoration: none;
	}

	body{
		margin: 0;
		font-size: 10px !important;
		position: relative;
		background-color: var(--Primary-Color);
	}

	@font-face {
		font-family: 'Manrope-ExtraBold';
		src: url("/fonts/Manrope/static/Manrope-ExtraBold.ttf");
	}

	@font-face {
		font-family: 'Manrope-Medium';
		src: url("/fonts/Manrope/static/Manrope-Medium.ttf");
	}

	@font-face {
		font-family: 'Manrope-Bold';
		src: url("/fonts/Manrope/static/Manrope-Bold.ttf");
	}

	@font-face {
		font-family: 'Manrope-SemiBold';
		src: url("/fonts/Manrope/static/Manrope-SemiBold.ttf");
	}

	@font-face {
		font-family: 'Pacifico';
		src: url("/fonts/Pacifico/Pacifico-Regular.ttf");
	}
</style>